{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "es2015",
      "dom",
      "es2016"
    ],
    "noImplicitAny": true,
    "suppressImplicitAnyIndexErrors": true,
    "baseUrl": "./",
    "paths": {
      "root/*": [
        "*"
      ],
      "common/*": [
        "src/common/*"
      ],
      "app/*": [
        "src/modules/app/*"
      ]
    },
    "outDir": "./compiled/src"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules"
  ],
  "angularCompilerOptions": {
    "genDir": "./compiled/aot",
    "skipMetadataEmit": true
  }
}
