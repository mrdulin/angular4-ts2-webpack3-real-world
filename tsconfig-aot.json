{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "dom",
      "es2015",
      "es2016"
    ],

    "noImplicitAny": true,
    "noImplicitThis": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "baseUrl": ".",
    "paths": {
      "root/*": [
        "*"
      ],
      "common/*": [
        "src/common/*"
      ],
      "app/*": [
        "src/modules/app/*"
      ]
    },
    "outDir": "./compiled/src"
  },
  "files": [
    "./src/main.ts",
    "./src/modules/app/index.ts",
    "./src/modules/diseaseCenter/index.ts",
    "./src/modules/doctorCenter/index.ts",
    "./src/modules/goToHospital/index.ts",
    "./src/modules/tagManager/index.ts",
    "./src/typings/json.d.ts"
  ],
  "angularCompilerOptions": {
    "genDir": "./compiled/aot",
    "skipMetadataEmit": true
  }
}
